generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Album {
  id            String   @id @default(cuid())
  artist        String
  title         String
  year          Int?
  format        String?
  genre         String?
  label         String?
  coverImage    String?
  discogsUrl    String?
  discogsId     String?  @unique
  appleMusicUrl String?
  allMusicUrl   String?
  status        Status   @default(WANT)
  notes         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("albums")
}

enum Status {
  WANT
  HAVE
}
